<div class="container mt-5 pt-5">
    <table class="table table-striped table-hover text-center align-middle">
        <thead>
            <tr>
                <th scope="col">Nom du stage</th>
                <th scope="col">Date de début</th>
                <th scope="col">Date fin</th>
                <th scope="col">Nombre d'élèves</th>
                <th scope="col">Age minimun</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {% for stage in stages %}
                <tr>
                    <td>{{ stage.name | capitalize }}</td>
                    <td>{{ stage.starting_day | date('d/m/Y') }}</td>
                    <td>{{ stage.ending_day | date('d/m/Y') }}</td>
                    <td>{{ stage.capacity }}</td>
                    <td>{{ stage.age }}</td>
                    <td>
                        <a class="btn btn-sm btn-secondary mb-1 col-8" href="/AdminStage/edit/{{ stage.id }}">Editer</a>
                        <form action="/adminStage/delete/{{stage.id}}" method="POST" onSubmit="return confirm('Voulez-vous supprimer ?');">
                            <button class="btn btn-sm btn-danger mb-1 col-8">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>