<div class="form-course-admin">
	<form action="" method="POST">
		<div class="form-group">
			<label for="name">Nom du cours</label>
			<input class="form-control" type="text" name="name" id="name">
		</div>
		<div class="form-group">
			<label for="time-start">Heure de début</label>
			<input class="form-control" type="time" name="time-start" id="time-start" min="09:00" max="22:00" pattern="[0-9]{2}:[0-9]{2}" placeholder="00:00">
		</div>
		<div class="form-group">
			<label for="duration">Durée</label>
			<input class="form-control" type="number" name="duration" id="duration">
		</div>
		<div class="form-group">
			<label for="target">Professeurs</label>
			<select class="form-control" name="target" id="target" multiple>
				<option value="">Quel professeur peut dispenser le cours</option>
				<option value="prof1">prof1</option>
				<option value="prof2">prof2</option>
				<option value="prof3">prof3</option>
				<option value="prof3">prof4</option>
				<option value="prof3">prof5</option>
				<option value="prof3">prof6</option>
			</select>
		</div>
		<div class="form-group">
			<label for="capacity">Nombre d'élèves</label>
			<input class="form-control" type="number" name="capacity" id="capacity">
		</div>
		<button class="btn btn-primary btn-formulary" type="submit">Enregistrer</button>
	</form>
</div>
