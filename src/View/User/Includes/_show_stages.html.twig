<div class="container mt-5 pt-5">
    <table class="table table-striped table-hover text-center align-middle">
        <thead>
            <tr class="align-sm-middle">
                <th scope="col" class="p-1 p-sm-2">Nom du stage</th>
                <th scope="col" class="p-1 p-sm-2">Date de dÃ©but</th>
                <th scope="col" class="p-1 p-sm-2">Date fin</th>
                <th scope="col" class="p-1 p-sm-2">Age minimun</th>
            </tr>
        </thead>
        <tbody>
            {% for stage in stages %}
                <tr>
                    <td class="p-1 p-sm-2">{{ stage.name | capitalize }}</td>
                    <td class="p-1 p-sm-2">{{ stage.starting_day | date('d/m/y') }}</td>
                    <td class="p-1 p-sm-2">{{ stage.ending_day | date('d/m/y') }}</td>
                    <td class="p-1 p-sm-2">{{ stage.age }} an(s)</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>